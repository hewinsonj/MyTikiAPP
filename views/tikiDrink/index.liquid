{% layout 'layout.liquid' %}
{% block content %}
    {% if tikiDrink.length > 0%}
        <div>
            <div style="height: 4rem">sssssss</div>
            <div class="row">
                
                {% for tikiDrink in tikiDrink %}
                    <div class="card" style="width: 18rem;">
                        
                        <div class="card-header" style="text-align: center; height: 80px; overflow: auto; font-size: 2rem; min-width: 5rem" >{{tikiDrink.name}}</div>
                        <div class="card-body" style="display: block; text-align: center;">
                            
                            {%- comment -%} <p>Last Updated: {{tikiDrink.lastUpdated}}</p> {%- endcomment -%}
                            

                            {%if tikiDrink.owner%}
                                <h5>Last Updated: </h5>
                                <h5> {{tikiDrink.lastUpdated}}</h5>

                            {%else%}
                                <h5>Original creator: </h5>
                                <h3 class="card-text"> {{tikiDrink.ogCreator}}</h3>
                            {%endif%}

                            <a class="btn btn-info" href="/tikiDrink/{{tikiDrink.id}}">
                                View
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% else %}
        <div>
            <h2 class="display-6">No drinks yet... time to come up with some!</h2>
        </div>
    {% endif %}
{% endblock %}