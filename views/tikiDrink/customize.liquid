{% layout 'layout.liquid' %}
{% block content %}

    <div class="container-sm">
        {%- comment -%} change the action {%- endcomment -%}
        {%- comment -%} add values to input fields {%- endcomment -%}
        {%- comment -%} add a back button {%- endcomment -%}
        <form action="/tikiDrink" method="POST">
            <fieldset id="field">
                
                <legend>Customize {{tikiDrink.name}}</legend>
                    <button onclick="addBox()" type="button"  class="btn btn-primary" data-bs-toggle="button" aria-pressed="false" autocomplete="off" id="addIng">Add Ingredient </button>
            <div>
                <div class="inputLine">
                    <label class="form-label">Name:</label>
                     <input
                        class="form-control"
                        type="text"
                        name="name"
                        placeholder="Enter the name of the drink"
                        value="{{ tikiDrink.name }}"
                      >
                </div>
                <input
                    style="display: none;"
                    class="form-control"
                    type="text"
                    name="lastUpdated"
                    value={{ "now" | date: "%m-%d-%Y" }}
                > 
            {% for ingredients in tikiDrink.ingredients %}
 
                <div class="inputLine">
                     <label class="form-label">Ingredient: </label>
                     <input
                            class="form-control"
                            type="text"
                           name="ingredient"
                           placeholder="ingredient"
                           value="{{ingredients}}"
                    >
                </div>
            {% endfor %}
            {% for garnishes in tikiDrink.garnishes %}
                <div class="inputLine">
                      <label class="form-label">Garnish: </label>
                      <input
                        class="form-control"
                        type="text"
                        name="garnish"
                        value="{{ garnishes}}"
                      >
                </div>
            {%endfor%}
                <div class="inputLine">
                      <label class="form-label">Glassware: </label>
                      <input
                          class="form-control"
                          type="text"
                          name="glassware"
                          value="{{ tikiDrink.glassware }}"
                      >
                </div>
            {% for prepInstructs in tikiDrink.prepInstructs %}
                <div class="inputLine">
                      <label class="form-label">Prep Instructions: </label>
                      <input
                          class="form-control"
                          type="text"
                          name="prepInstruct"
                          value="{{ prepInstructs }}"
                      >
                </div>
            {%endfor%}

            </div>
            </fieldset>
            <input
                class="btn btn-success"
                type="submit"
                value="Add to MyOriginals"
            >
        
        </form>
    </div>

