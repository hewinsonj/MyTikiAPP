{% layout 'layout.liquid' %}
{% block content %}
    <div class="topSpace">sssssss</div>
    <div id="fieldBox">
        <div  id="customize" >
            <form action="/tikiDrink" method="POST">
                <legend  style="font-size: 2rem;">Create New</legend>
                <fieldset>
                    <div class="inputLine">
                        <label style="margin-top: 1rem;">Name:</label>
                        <input
                            class="form-control"
                            type="text"
                            name="name"
                            style="margin: 1vh 0 1vh 0;"
                            placeholder="enter the name of the drink"
                            value="{{ tikiDrink.name }}"
                        >
                        <input
                            style="display: none;"
                            class="form-check-input"
                            type="checkbox"
                            name="fav"
                        >
                        <input
                            style="display: none;"
                            class="form-control"
                            type="text"
                            name="lastUpdated"
                            value={{ "now" | date: "%m/%d/%Y" }}
                        > 
                        <label >Ingredients (separate with comma): </label>
                        <textarea 
                            type="text" 
                            class="form-control" 
                            name="ingredients" 
                            aria-label="Ingredients Here"  
                            style="margin: 1vh 0 1vh 0; min-height: 10vh;" 
                            placeholder="(ingredient) (qty), (ingredient) (qty), (ingredient) (qty)  example: Rum 2oz, Tequila .5oz"
                        ></textarea>
                        <label >Garnishes (separate with comma): </label>
                        <textarea 
                            type="text" 
                            class="form-control" 
                            name="garnishes" 
                            style="margin: 1vh 0 1vh 0; min-height: 10vh;" 
                            placeholder="(garnish name) (qty), (garnish name) (qty), (garnish name) (qty)  example: Lime Wheel 1 piece, Lemon Wheel 1 piece"
                            ></textarea>
                        <label>Prep Instructions (separate with comma): </label>
                        <textarea 
                            type="text" 
                            class="form-control" 
                            name="prepInstructs"  
                            style="margin: 1vh 0 1vh 0; min-height: 10vh;" 
                            placeholder="(prep instruction), (prep instruction), (prep instruction) example: Do the thing, Do the other thing, Do the other other thing"
                        ></textarea>
                        <label>Glassware: </label>
                        <input
                            class="form-control"
                            type="text"
                            name="glassware"
                            placeholder="enter glassware"
                            style="margin: 1vh 0 3vh 0;"
                        >
                    </div>
                </fieldset>
                <input
                    class="btn btn-success"
                    type="submit"
                    value="Create New Tiki Drink"
                >
            </form>
        </div>
    </div>
{% endblock %}